#!/bin/bash

#
# lib/system
#
# Functions for executing external processes and checking for errors.
#

execute_silent() {
  local args="$@"

  if [[ ${VERBOSE} == 1 ]]; then
    echo
    debug "${args}"
    ${args}
  else
    ${args} &> /dev/null
  fi

  return $?
}

execute() {
  execute_silent "$@"
  local err="$?"

  if [[ ${VERBOSE} != 1 ]]; then
    if [[ ${err} != 0 ]]; then
      error
    else
      ok
    fi
  fi

  return ${err}
}
