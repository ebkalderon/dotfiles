#!/usr/bin/env bash

#
# lib/system
#
# Functions for executing external processes and checking for errors.
#

execute_silent() {
  if [[ ${VERBOSE} == 1 ]]; then
    debug "$@\n"
    "$@"
  else
    "$@" &> /dev/null
  fi

  return $?
}

execute() {
  execute_silent "$@"
  local err="$?"

  if [[ ${VERBOSE} != 1 ]]; then
    if [[ ${err} != 0 ]]; then
      error
    else
      ok
    fi
  fi

  return ${err}
}
